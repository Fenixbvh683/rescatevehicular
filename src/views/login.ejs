<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') %>


<body class="detalle">
    <%- include('partials/header') %>

    <main class="detalle__main">
        <div class="row">
            <div class="col-12 col-md-10 col-lg-8 mx-auto mt-5">
                <div class="card mb-3 shadow-lg">
                    <div class="card-header">
                        LOGIN
                        <div class="card-body">
                            <form action="" method="POST" class="row">
                                
                                <div class="col-12 col-md-6 mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" class="form-control" id="email" placeholder="Tu Email" name="email">
                                </div>

                                <div class="col-12 col-md-6 mb-3">
                                    <label for="password" class="form-label">Contraseña</label>
                                    <input type="password" class="form-control" id="password" placeholder="Tu Contraseña" name="password">
                                </div>

                                <div class="d-flex justify-content-between">

                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="remember" name="remember">
                                        <label class="form-check-label" for="remember">
                                          Recordame
                                        </label>
                                      </div>

                                    <button type="submit" class="btn btn-dark">Registrate</button>
                                </div>
                                
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <%- include('partials/footer') %>
    <%- include('partials/script') %>

</body>

</html>